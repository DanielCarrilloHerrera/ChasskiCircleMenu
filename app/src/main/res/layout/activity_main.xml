<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/snackbar_contaner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <com.imangazaliev.circlemenu.CircleMenu
        android:id="@+id/circle_menu_multiple_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:hintsEnabled="true"
        app:multiple_check="true"
        app:alpha_check="false"
        app:border_check="true"
        app:center_drawable="@drawable/business_icon"
        app:confirmation_center_drawable="@drawable/business_icon">
    </com.imangazaliev.circlemenu.CircleMenu>

</RelativeLayout>
